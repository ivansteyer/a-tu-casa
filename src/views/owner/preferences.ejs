<%- include('../partials/header') %>
<h2>Preferencias de inquilino</h2>
<form class="form" action="/owner/preferences" method="post">
  <label>Tipo de contrato
    <input name="tipoContrato" value="<%= pref ? pref.tipoContrato : '' %>">
  </label>
  <label>Presupuesto mínimo
    <input type="number" name="presupuestoMinimo" value="<%= pref ? pref.presupuestoMinimo : '' %>">
  </label>
  <label>Mascotas
    <select name="mascotas">
      <option value="" <%= !pref || !pref.mascotas ? 'selected' : '' %>></option>
      <option value="sí" <%= pref && pref.mascotas==='sí' ? 'selected' : '' %>>Sí</option>
      <option value="no" <%= pref && pref.mascotas==='no' ? 'selected' : '' %>>No</option>
      <option value="indiferente" <%= pref && pref.mascotas==='indiferente' ? 'selected' : '' %>>Indiferente</option>
    </select>
  </label>
  <label>Número máximo de personas
    <input type="number" name="maxPersonas" value="<%= pref ? pref.maxPersonas : '' %>">
  </label>
  <label>Profesión preferida
    <input name="profesionPreferida" value="<%= pref ? pref.profesionPreferida : '' %>">
  </label>
  <label>Nacionalidad preferida
    <input name="nacionalidadPreferida" value="<%= pref ? pref.nacionalidadPreferida : '' %>">
  </label>
  <label>Otros
    <textarea name="otros" rows="4"><%= pref ? pref.otros : '' %></textarea>
  </label>
  <button class="btn">Guardar</button>
</form>
<%- include('../partials/footer') %>
