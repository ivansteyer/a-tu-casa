<%- include('../partials/header') %><h2>Nueva propiedad</h2>
<form class="form grid" method="post" action="/owner/properties">
<label>Título <input name="title" required></label>
<label>Tipo <input name="type" placeholder="PISO / CASA"></label>
<label>Habitaciones <input name="bedrooms" type="number" min="0"></label>
<label>Ubicación <input name="location"></label>
<label><input type="checkbox" name="hasTerrace"> ¿Tiene terraza?</label>
<label>Precio (€/mes) <input name="price" type="number" min="0"></label>
<label>Modalidad <input name="modality" placeholder="Larga estancia / Temporal"></label>
<label>Disponible desde <input name="availableFrom" placeholder="2025-09-01"></label>
<label>Descripción <textarea name="description" rows="4"></textarea></label>
<button class="btn">Publicar</button></form><%- include('../partials/footer') %>
