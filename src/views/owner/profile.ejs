<%- include('../partials/header') %>
<h2>Perfil de propietario</h2>
<form class="form" action="/owner/profile" method="post" enctype="multipart/form-data">
  <label>Nombre
    <input name="nombre" value="<%= profile ? profile.nombre : '' %>">
  </label>
  <label>Teléfono
    <input name="telefono" value="<%= profile ? profile.telefono : '' %>">
  </label>
  <label>Descripción
    <textarea name="descripcion" rows="4"><%= profile ? profile.descripcion : '' %></textarea>
  </label>
  <label>Foto de perfil
    <input type="file" name="fotoPerfil">
  </label>
  <% if (profile && profile.fotoPerfil) { %>
    <img src="/uploads/<%= profile.fotoPerfil %>" alt="Foto perfil" style="max-width:150px;">
  <% } %>
  <button class="btn">Guardar</button>
</form>
<%- include('../partials/footer') %>
